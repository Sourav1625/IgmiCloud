<UserControl x:Class="IGMICloudApplication.UserControl.ProfileMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGMICloudApplication.UserControl" xmlns:viewmodels="clr-namespace:IGMICloudApplication.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="160">
    <Grid>
        <Menu HorizontalAlignment="Left" Margin="10,50" Background="#FFF7FBFF">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Profile" Margin="0,0,0,10">
            </MenuItem>
            <MenuItem Header="Account" Margin="0,0,0,10">
            </MenuItem>
            <MenuItem Header="Organization" Margin="0,0,0,10">
            </MenuItem>
            <MenuItem Header="Team Management">
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
